   "source": [
    "# Dataset Class Distribution Analysis\n",
    "\n",
    "This notebook analyzes the class balance of the dataset, identifying rare classes and visualizing the overall distribution."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import os\n",
    "import pandas as pd\n",
    "import seaborn as sns\n",
    "import matplotlib.pyplot as plt\n",
    "from pathlib import Path\n",
    "\n",
    "# Configuration\n",
    "DATA_DIR = '../data/release/agri_foundation_v1/data' # Adjust if needed\n",
    "\n",
    "print(f\"Analyzing dataset at: {DATA_DIR}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def get_class_counts(data_dir):\n",
    "    class_counts = {}\n",
    "    classes = sorted([d for d in os.listdir(data_dir) if os.path.isdir(os.path.join(data_dir, d))])\n",
    "    \n",
    "    print(f\"Found {len(classes)} classes.\")\n",
    "    \n",
    "    for cls in classes:\n",
    "        cls_path = os.path.join(data_dir, cls)\n",
    "        # Count files (images)\n",
    "        count = len([f for f in os.listdir(cls_path) if os.path.isfile(os.path.join(cls_path, f))])\n",
    "        class_counts[cls] = count\n",
    "        \n",
    "    return pd.DataFrame(list(class_counts.items()), columns=['Class', 'Count'])\n",
    "\n",
    "df = get_class_counts(DATA_DIR)\n",
    "df.head()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Basic Statistics\n",
    "print(f\"Total Images: {df['Count'].sum()}\n")\n",
    "print(f\"Average Images per Class: {df['Count'].mean():.2f}\n")\n",
    "print(f\"Median Images per Class: {df['Count'].median():.2f}\n")\n",
    "print(f\"Min Images: {df['Count'].min()}\n")\n",
    "print(f\"Max Images: {df['Count'].max()}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Identify Rare Classes\n",
    "RARE_THRESHOLD = 5\n",
    "rare_classes = df[df['Count'] < RARE_THRESHOLD].sort_values('Count')\n",
    "\n",
    "print(f\"Classes with < {RARE_THRESHOLD} images: {len(rare_classes)}\n")\n",
    "print(\"\nRare Classes List:\")\n",
    "print(rare_classes.to_string(index=False))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Visualization\n",
    "plt.figure(figsize=(20, 10))\n",
    "sns.histplot(data=df, x='Count', bins=50, kde=True)\n",
    "plt.title('Distribution of Images per Class')\n",
    "plt.xlabel('Number of Images')\n",
    "plt.ylabel('Frequency (Number of Classes)')\n",
    "plt.grid(True, alpha=0.3)\n",
    "plt.show()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Detailed Bar Plot (Top 20 and Bottom 20)\n",
    "fig, axes = plt.subplots(2, 1, figsize=(15, 12))\n",
    "\n",
    "# Top 20\n",
    "top_20 = df.nlargest(20, 'Count')\n",
    "sns.barplot(data=top_20, x='Count', y='Class', ax=axes[0], palette='viridis')\n",
    "axes[0].set_title('Top 20 Classes by Sample Count')\n",
    "\n",
    "# Bottom 20\n",
    "bottom_20 = df.nsmallest(20, 'Count')\n",
    "sns.barplot(data=bottom_20, x='Count', y='Class', ax=axes[1], palette='magma')\n",
    "axes[1].set_title('Bottom 20 Classes by Sample Count')\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.show()"
   ]
  }
 ],
